import tkinter as tk

#region COLORS_CONSTANT

TXTCOL1 = "#FB8423"
TXTCOL2 = "#ED9B40"
BGCOL1 = "#93B1A7"
BGCOL2 = "#7A918D"
BGCOL3 = "#9AC1A2"

#endregion

#region FONCTION

def Settings():
    SettingsWindow = tk.Toplevel()
    SettingsWindow.geometry('150x150')
    newlabel = tk.Label(SettingsWindow, text = "Settings Window")
    newlabel.pack()

def Play():
    print("ChoosingDifficultyMenu")


def Reload():
    print("ReloadASudokuMenu")

def PackButtons():
    button2.pack(pady =10)
    button3.pack(pady=10)
    button.pack(pady=10)

def LeaveApp():
    pass
#destroy etc

    
#enregion


MainRoot = tk.Tk()
MainRoot.geometry("1600x900")
MainRoot.title("SudokuMaster")


button = tk.Button(MainRoot, text = "Settings", command = Settings,
                fg = TXTCOL1, font = "Verdana 20", bg = BGCOL3)

button2 = tk.Button(MainRoot, text = "Play", command = Play,
                fg = TXTCOL1, font = "Verdana 54", bg = BGCOL2)

button3 = tk.Button(MainRoot, text = "Reload", command = Reload,
                fg = TXTCOL1, font = "Verdana 24", bg = BGCOL2)

MainTitle = tk.Label(MainRoot, text = "MainTitle", fg=TXTCOL2, bg=BGCOL1, font = "Verdana 100")

MainTitle.pack(side="top", fill= tk.X)


PackButtons()
MainRoot.mainloop()