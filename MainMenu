import tkinter as tk
from PIL import Image, ImageTk 
from customtkinter import *
#region COLORS_CONSTANT

TXTCOL1 = "#C56135"
TXTCOL2 = "#ED9B40"
BGCOL1 = "#93B1A7"
BGCOL2 = "#7A918D"
BGCOL3 = "#9AC1A2"

#endregion

#region FONCTION

def Settings():
    SettingsWindow = tk.Toplevel()
    SettingsWindow.geometry('150x150')
    newlabel = tk.Label(SettingsWindow, text = "Settings Window")
    newlabel.pack()

def Play():
    print("ChoosingDifficultyMenu")


def Reload():
    print("ReloadASudokuMenu")

def PackButtons():
    button2.pack(pady=10)
    button3.pack(pady=10)
    button.pack(pady=10)

def LeaveApp():
    pass
#destroy etc

    
#enregion



MainRoot = CTk()
#MainRoot.geometry("3840x2160")
width = MainRoot.winfo_screenwidth()
height = MainRoot.winfo_screenheight()
MainRoot.geometry(f"{width}x{height}")
MainRoot.title("Kudoku Sudoku")
MainRoot.state('zoomed') 
#MainRoot.attributes('-fullscreen',True)
switch_var = StringVar(value="dark")

def switch_event():
    mode = switch_var.get()
    set_appearance_mode(mode)
    print(mode)
   
switch_1 = CTkSwitch(master=MainRoot, text="LightMode", command=switch_event,
                                   variable=switch_var, onvalue="dark", offvalue="light",progress_color=TXTCOL1)

switch_1.pack(side="bottom")

button = CTkButton(MainRoot, text = "Settings",
                corner_radius=32, command = Settings,hover_color=TXTCOL1,fg_color=TXTCOL2)

button2 = CTkButton(MainRoot, text = "Play",corner_radius=32, command = Play,hover_color=TXTCOL1,fg_color=TXTCOL2)

button3 = CTkButton(MainRoot, text = "Reload", 
                corner_radius=32, command = Reload,hover_color=TXTCOL1,fg_color=TXTCOL2)

createdBy = "Created by :"
names = ["Abigael Roche", "Lana Blaise", "FÃ©lix Plaine-Forgues"]

aligned_text = f"{createdBy:1}{names[0]}\n{'':10}{names[1]}\n{'':19}{names[2]}"

MainTitle = CTkLabel(MainRoot, text = "Kudoku Sudoku",text_color=TXTCOL2,font=("Cascadia Code",160))
Credits = CTkLabel(MainRoot, text = aligned_text,text_color=TXTCOL2,font=("Cascadia Code",14))

#img = Image.open('download.png')  
#photo = ImageTk.PhotoImage(img)  # Convert to Tkinter-compatible format

#endregion
#canvas = tk.Canvas(MainRoot, width = img.size[0], height = img.size[1])
#canvas.create_image(0, 0, anchor=tk.NW, image=photo)
#canvas.pack()
MainTitle.pack(side="top", fill= tk.X)
#Credits.pack(side="bottom")
Credits.place(rely=1.0, relx=1.0, x=0, y=0, anchor=SE)

PackButtons()
MainRoot.mainloop()